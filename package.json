{
  "name": "redsys-easy",
  "description": "Node JS interface for Redsys payment gateway",
  "version": "3.1.0",
  "author": "Javier Garcia <javiertury@gmail.com>",
  "license": "MIT",
  "keywords": [
    "redsys",
    "payment",
    "gateway",
    "interface",
    "tpv",
    "pos",
    "sabadell",
    "caixabank",
    "credit",
    "card",
    "webservice"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/javiertury/redsys-easy.git"
  },
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build:clean": "rimraf lib",
    "build": "npm run build:clean; rollup -c rollup.config.js",
    "prepublishOnly": "npm run build",
    "release": "standard-version",
    "lint": "eslint --ext js,ts .",
    "test-unit": "jest ./test/unit/**/*.test.ts",
    "test-integration": "jest ./test/integration/**/*.test.ts",
    "test-code": "jest",
    "test-types": "tsd",
    "test": "npm run test-code && npm run test-types"
  },
  "files": [
    "lib"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "base64url": "^3.0.1",
    "dayjs": "^1.9.6",
    "fast-xml-parser": "^3.12.16",
    "soap": "^0.35.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.3.1",
    "@commitlint/config-conventional": "^7.3.1",
    "@koa/router": "^8.0.5",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@types/bluebird": "^3.5.33",
    "@types/cheerio": "^0.22.22",
    "@types/koa": "^2.11.6",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/node-fetch": "^2.5.7",
    "@types/request": "^2.48.5",
    "@types/sax": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "cheerio": "^1.0.0-rc.3",
    "eslint": "^7.14.0",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-html": "^6.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^23.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^1.3.1",
    "jest": "^26.6.3",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "lint-staged": "^10.5.2",
    "node-fetch": "^2.6.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.3",
    "rollup-plugin-typescript2": "^0.29.0",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.4",
    "tsd": "^0.13.1",
    "typescript": "^4.1.2"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/test/unit/**/*.test.ts",
      "<rootDir>/test/integration/**/*.test.ts"
    ],
    "setupFilesAfterEnv": [
      "./test/jest.setup.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.test.json"
      }
    }
  },
  "tsd": {
    "directory": "test/types"
  }
}
