{
  "name": "redsys-easy",
  "description": "Node JS interface for Redsys payment gateway",
  "version": "4.0.2",
  "author": "Javier Garcia <javiertury@gmail.com>",
  "license": "MIT",
  "keywords": [
    "redsys",
    "payment",
    "gateway",
    "interface",
    "tpv",
    "pos",
    "sabadell",
    "caixabank",
    "credit",
    "card",
    "webservice"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/javiertury/redsys-easy.git"
  },
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepare": "simple-git-hooks",
    "lint": "eslint --ext js,ts .",
    "build:clean": "rimraf lib",
    "build:code": "rollup -c rollup.config.js",
    "build:api": "api-extractor run --local",
    "build": "pnpm run build:clean && pnpm run lint && pnpm run build:code && pnpm run build:api",
    "prepublishOnly": "pnpm run build",
    "test:unit": "jest ./src/*.test.ts ./src/**/*.test.ts",
    "test:integration": "jest ./test/integration/**/*.test.ts",
    "test:code": "jest",
    "test:readme": "tsc -p ./tsconfig.readme.json",
    "test": "pnpm run test:code && pnpm run test:readme",
    "docs:api": "api-documenter markdown --input-folder ./api/temp --output-folder ./docs",
    "docs:readme": "md-magic --path ./README.md",
    "docs": "pnpm run docs:api && pnpm run docs:readme",
    "release": "pnpm run test && standard-version --dry-run && pnpm run docs && standard-version --commit-all"
  },
  "files": [
    "lib"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpx lint-staged",
    "commit-msg": "pnpx commitlint -e"
  },
  "dependencies": {
    "@types/node-fetch": "^2.5.11",
    "base64url": "^3.0.1",
    "dayjs": "^1.10.6",
    "decimal.js": "^10.3.1",
    "fast-xml-parser": "^4.0.0",
    "node-fetch": "^2.6.1",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@koa/router": "^10.0.0",
    "@microsoft/api-documenter": "^7.13.33",
    "@microsoft/api-extractor": "^7.18.4",
    "@rollup/plugin-node-resolve": "^13.0.2",
    "@types/bluebird": "^3.5.36",
    "@types/cheerio": "^0.22.30",
    "@types/jest": "^26.0.24",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.2",
    "@types/koa__router": "^8.0.7",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "cheerio": "^1.0.0-rc.10",
    "eslint": "^7.30.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.0.6",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "lint-staged": "^11.0.1",
    "markdown-magic": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.53.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "simple-git-hooks": "^2.5.1",
    "standard-version": "^9.3.1",
    "ts-expect": "^1.3.0",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/test/unit/**/*.test.ts",
      "<rootDir>/test/integration/**/*.test.ts",
      "<rootDir>/src/**/*.test.ts"
    ],
    "setupFilesAfterEnv": [
      "./test/jest.setup.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.test.json"
      }
    },
    "moduleNameMapper": {
      "redsys-easy": "<rootDir>/src"
    }
  }
}
